{
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "singleAttributePerLine": true,
    "importOrder": [
        "THRID_PARTY_MODULES",
        "^@/components/(.*)$",
        "@/layout/(.*)$",
        "@/ui/(.*)$",
        "@/providers/(.*)$",
        "@/constants/(.*)$",
        "@/types/(.*)$",
        "@/assets/(.*)$",
        "@/config/(.*)$",
        "@/store/(.*)$",
        "@/hooks/(.*)$",
        "@/utiles/(.*)$",
        "@/api/(.*)$",
        "^../(.*)",
        "^./(.*)",
        "(.scss)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}